[config]
SCM_DO_BUILD_DURING_DEPLOYMENT=true
WEBSITE_RUN_FROM_PACKAGE=1
WEBSITE_WEBDEPLOY_USE_SCM=true
WEBSITE_NODE_DEFAULT_VERSION=~18
WEBSITE_PYTHON_VERSION=3.11
WEBSITE_PYTHON_PRELOAD=1
WEBSITE_PYTHON_ENABLE_WORKER_EXTENSIONS=1
WEBSITE_PYTHON_ENABLE_GUNICORN_MULTIWORKERS=1
WEBSITE_PYTHON_ENABLE_GUNICORN_LOGGING=1
WEBSITE_PYTHON_ENABLE_GUNICORN_ACCESS_LOGGING=1
WEBSITE_PYTHON_ENABLE_GUNICORN_ERROR_LOGGING=1
WEBSITE_PYTHON_ENABLE_GUNICORN_RELOAD=1
WEBSITE_PYTHON_ENABLE_GUNICORN_CAPTURE_OUTPUT=1
WEBSITE_PYTHON_ENABLE_GUNICORN_STDIO_INHERITANCE=1
WEBSITE_PYTHON_ENABLE_GUNICORN_DEBUG=1
WEBSITE_PYTHON_ENABLE_GUNICORN_WORKERS=4
WEBSITE_PYTHON_ENABLE_GUNICORN_TIMEOUT=120
WEBSITE_PYTHON_ENABLE_GUNICORN_BIND=0.0.0.0:8000
WEBSITE_PYTHON_ENABLE_GUNICORN_APP=app:app
WEBSITE_PYTHON_ENABLE_GUNICORN_STARTUP_SCRIPT=startup.sh
WEBSITE_PYTHON_ENABLE_PACKAGE_INSTALLATION=1
WEBSITE_PYTHON_ENABLE_SYSTEM_PACKAGES=1
WEBSITE_PYTHON_ENABLE_MYSQL=1
SCM_USE_MSDEPLOY=true
SCM_DO_BUILD_DURING_DEPLOYMENT_DELAY=30

[deployment]
command = bash deploy.sh